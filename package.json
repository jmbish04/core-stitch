{
  "name": "core-stitch",
  "version": "1.0.0",
  "description": "Full-stack Cloudflare Worker with Agents SDK and Astro frontend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend",
    "deploy": "npm run build && wrangler deploy",
    "db:init": "wrangler d1 execute stitch-db --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute stitch-db --remote --file=./schema.sql"
  },
  "dependencies": {
    "agents": "^0.0.87",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.7.0",
    "openai": "^4.77.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.99.0"
  }
}
